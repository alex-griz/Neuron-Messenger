<Window x:Class="Neuron.NeuronMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Neuron"
        mc:Ignorable="d"
        Title="Neuron - Мессенджер" Height="800" Width="1400" ResizeMode="CanMinimize">
    <Grid>
        <Canvas>
            <Canvas.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF22002E"/>
                    <GradientStop Color="#FF3B0150" Offset="1"/>
                </LinearGradientBrush>
            </Canvas.Background>
            <ListBox x:Name="ChatList" DataContext="{x:Null}"  Height="720" Width="300" HorizontalAlignment="Center" VerticalAlignment="Center" Background="{x:Null}" Foreground="White" BorderBrush="{x:Null}" FontFamily="Bahnschrift Light Condensed" FontSize="36" Canvas.Top="64">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Button Content ="{Binding ButtonName}" Tag ="{Binding ChatID}" Width="280" Height="50" Background="{x:Null}" BorderBrush="White" Foreground="White" FontFamily="Bahnschrift Light Condensed" FontSize="24" Click="SelectContact"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <ListBox x:Name="MessagesField" Height="630" Width="1075" HorizontalAlignment="Center" Canvas.Left="310" VerticalAlignment="Top" Canvas.Top="65" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Label Content="{Binding}" Foreground="White" FontFamily="Bahnschrift Light Condensed" FontSize="20"></Label>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Label x:Name="HeadNameLabel" Content="" Canvas.Left="310" Canvas.Top="10" Height="54" Width="890" Foreground="White" FontFamily="Bahnschrift Light Condensed" FontSize="36" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Label Content="               Чаты" Canvas.Top="10" Height="60" Width="200" Foreground="White" FontFamily="Bahnschrift Light Condensed" FontSize="36" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <TextBox x:Name="MessageField" Canvas.Left="310" TextWrapping="Wrap" Text="Сообщение..." Canvas.Top="695" Width="975" RenderTransformOrigin="0.521,1.032" Background="{x:Null}" BorderBrush="White" Foreground="White" FontFamily="Bahnschrift Light Condensed" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Height="60" UndoLimit="512"/>
            <Button Content="🢁" Canvas.Left="1290" Canvas.Top="695" RenderTransformOrigin="-0.149,0.057" Height="60" Width="95" Background="{x:Null}" BorderBrush="White" Foreground="White" FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Top" Click="Button_Click_1"/>
            <Button x:Name="AddMemberButton" Content="+" Canvas.Left="1205" Width="100" Height="60" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" FontFamily="Arial" FontSize="60"  HorizontalAlignment="Center" VerticalAlignment="Top" Click="AddMemberButton_Click"/>
            <Expander Height="34" Header="Добавить" Canvas.Left="200" Canvas.Top="23" Width="110" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="White" RenderTransformOrigin="0.639,0.538" FontFamily="Bahnschrift Light Condensed" FontSize="20">
                <StackPanel Margin="0,0,0,-48">
                    <Button Background="{x:Null}" Foreground="White" BorderBrush="White" Content="Контакт" Click="Add_Contact"></Button>
                    <Button Background="{x:Null}" BorderBrush="White" Foreground="White" Content="Группа" Click="Add_Group"></Button>
                </StackPanel>
            </Expander>
        </Canvas>

    </Grid>
</Window>