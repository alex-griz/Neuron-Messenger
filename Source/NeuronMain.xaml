<Window x:Class="Neuron.NeuronMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Neuron"
        mc:Ignorable="d"
        Title="Neuron - Мессенджер" Height="800" Width="1400" ResizeMode="CanMinimize">
    <Grid>
        <Canvas>
            <Canvas.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF22002E"/>
                    <GradientStop Color="#FF3B0150" Offset="1"/>
                </LinearGradientBrush>
            </Canvas.Background>
            <ListBox x:Name="ChatList" Height="720" Width="300" HorizontalAlignment="Center" VerticalAlignment="Top" Background="{x:Null}" Foreground="White" BorderBrush="{x:Null}" FontFamily="Bahnschrift Light Condensed" FontSize="36" Canvas.Top="64"/>
            <ListBox x:Name="MessagesField" Height="720" Width="1100" HorizontalAlignment="Center" Canvas.Left="300" VerticalAlignment="Top" Canvas.Top="64" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White"/>
            <Label Content="Label" Canvas.Left="300" Canvas.Top="10" Height="60" Width="1100" Foreground="White" FontFamily="Bahnschrift Light Condensed" FontSize="36"/>
            <Label Content="               Чаты" Canvas.Top="10" Height="60" Width="300" Foreground="White" FontFamily="Bahnschrift Light Condensed" FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        </Canvas>

    </Grid>
</Window>