<Window x:Class="Neuron.AddContact"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Neuron"
        mc:Ignorable="d"
        Title="Neuron - новый контакт" Height="200" Width="400" ResizeMode="CanMinimize">
    <Grid>
        <Canvas>
            <Canvas.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF22002E"/>
                    <GradientStop Color="#FF3B0150" Offset="1"/>
                </LinearGradientBrush>
            </Canvas.Background>
            <Button Content="Добавить" Canvas.Left="150" Canvas.Top="130" Height="30" Width="100" Background="{x:Null}" BorderBrush="White" Foreground="White" FontFamily="Bahnschrift Light Condensed" FontSize="20" Click="Button_Click" HorizontalAlignment="Center" VerticalAlignment="Top" RenderTransformOrigin="0.492,0.061"/>
            <TextBox x:Name="ContactUsername" Canvas.Left="125" TextWrapping="Wrap" Text="Юзернейм" Canvas.Top="35" Width="150" RenderTransformOrigin="0.143,0.871" Background="{x:Null}" BorderBrush="White" Foreground="White" FontFamily="Bahnschrift Light Condensed" FontSize="20" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <TextBox x:Name="ChatNameBox" Canvas.Left="125" TextWrapping="Wrap" Text="Название" Canvas.Top="77" Width="150" RenderTransformOrigin="0.143,0.871" Background="{x:Null}" BorderBrush="White" Foreground="White" FontFamily="Bahnschrift Light Condensed" FontSize="20" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        </Canvas>

    </Grid>
</Window>