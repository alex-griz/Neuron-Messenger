<Window x:Class="Neuron.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Neuron"
        mc:Ignorable="d"
        Title="Neuron - Вход" Height="600" Width="400" ResizeMode="CanMinimize">
    <Canvas>
        <Canvas.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF22002E"/>
                <GradientStop Color="#FF3B0150" Offset="1"/>
            </LinearGradientBrush>
        </Canvas.Background>
        <Label Content="Войдите или зарегистрируйтесь" Canvas.Left="89" Canvas.Top="50" FontFamily="Bahnschrift Light Condensed" FontSize="20" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBox x:Name="LoginBox" Canvas.Left="90" TextWrapping="Wrap" Text="Логин" Canvas.Top="150" Width="220" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Background="{x:Null}" Foreground="White" BorderBrush="White" FontFamily="Bahnschrift Light Condensed" FontSize="20" RenderTransformOrigin="0.517,0.3"/>
        <PasswordBox x:Name="PasswordBox" Canvas.Left="89" Canvas.Top="200" Width="220" HorizontalAlignment="Center" VerticalAlignment="Top" Height="30" Background="{x:Null}" BorderBrush="White" Foreground="White" FontFamily="Bahnschrift Light Condensed" FontSize="20" Password="password" RenderTransformOrigin="0.56,0.394"/>
        <Button x:Name="LoginButton" Content="ВОЙТИ" Canvas.Left="144" Canvas.Top="300" HorizontalAlignment="Center" VerticalAlignment="Top" Height="30" Width="115" Background="{x:Null}" BorderBrush="#FFFCFCFC" FontFamily="Bahnschrift Light Condensed" FontSize="20" Foreground="White" Click="LoginButton_Click"/>
        <Button x:Name="RegistrationButton" Content="Регистрация" Canvas.Left="144" Canvas.Top="350" RenderTransformOrigin="2.165,0.728" Background="{x:Null}" BorderBrush="White" Foreground="White" FontFamily="Bahnschrift Light Condensed" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Top" Width="115" Click="RegistrationButton_Click"/>
        <CheckBox x:Name="SaveLogin" Content="Сохранить вход" Canvas.Left="135" Canvas.Top="255" FontFamily="Bahnschrift Light Condensed" FontSize="20" Width="130" Height="23" Background="{x:Null}" BorderBrush="White" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top"/>


    </Canvas>
</Window>