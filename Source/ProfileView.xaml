<Window x:Class="Neuron.ProfileView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Neuron"
        mc:Ignorable="d"
        Title="Neuron - ProfileView" Height="600" Width="400" ResizeMode="CanMinimize">
    <Canvas>
        <Canvas.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF22002E"/>
                <GradientStop Color="#FF3B0150" Offset="1"/>
            </LinearGradientBrush>
        </Canvas.Background>
        <TextBox x:Name="NameBox" Canvas.Left="100" TextWrapping="Wrap" Text="TextBox" Canvas.Top="207" Width="200" Height="30" HorizontalAlignment="Left" VerticalAlignment="Center" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" FontFamily="Bahnschrift Light Condensed" FontSize="24"/>
        <TextBox x:Name="BioBox" Canvas.Left="100" TextWrapping="Wrap" Text="TextBox" Canvas.Top="282" Width="200" HorizontalAlignment="Center" Height="120" VerticalAlignment="Top" Background="{x:Null}" BorderBrush="White" Foreground="White" FontFamily="Bahnschrift Light Condensed" FontSize="20"/>
        <Button x:Name="SaveButton" Content="Сохранить" Canvas.Left="150" Canvas.Top="424" HorizontalAlignment="Center" VerticalAlignment="Top" Width="100" Height="30" Background="{x:Null}" BorderBrush="White" Foreground="White" FontFamily="Bahnschrift Light Condensed" FontSize="24" Click="SaveProfile"/>
        <TextBox x:Name="UsernameBox" Canvas.Left="100" TextWrapping="Wrap" Text="TextBox" Canvas.Top="242" Width="120" HorizontalAlignment="Center" VerticalAlignment="Center" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" FontFamily="Bahnschrift Light Condensed" FontSize="18"/>

    </Canvas>
</Window>
